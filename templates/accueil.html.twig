{% extends 'base.html.twig' %}

{% block body %}
    {# bandeau #}
    <div id="bandeau">
        <div class="bandeau_shadow">
            <h1>MySite</h1>
        </div>
    </div>

    {# dernière photos #}
    <div class="container" id="dPhotos">
        <h2> Dernières Photos</h2>
        <div class="row">
            {% for photo in photos %}
            <img class="col-md-4" src="../{{ photo.image }}" alt="{{ photo.description }}" onclick="window.open(this.src,'_blank','toolbar=0, location=0, directories=0, status=0, scrollbars=0, resizable=0, copyhistory=0, menuBar=0, width='+this.width+', height='+this.height);">
            {% endfor %}
        </div>
    </div>
{% endblock %}